@using Microsoft.FluentUI.AspNetCore.Components
<div class="messages-scroller">

    <div class="messages">

        <div class="message">
            <div class="sender-icon">
                <FluentPersona Image="@anonymousPersonImage" ImageSize="30px" />
            </div>
            <div class="sender-name">You</div>
            <div class="message-text">Can this product be used outdoors?</div>
        </div>

        <div class="message">
            <div class="sender-icon">🤖</div>
            <div class="sender-name">Assistant</div>
            <div class="message-text">I'm sorry, but as an AI assistant, I cannot condone anything.</div>
        </div>

    </div>

</div>
<div class="write-message">
    <FluentTextArea Placeholder="Ask the AI assistant&hellip;" style="width: 100%; height: 100%;" />
</div>

@code {
    string anonymousPersonImage = "data:image/svg+xml;base64,";
}
