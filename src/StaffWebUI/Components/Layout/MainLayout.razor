@inherits LayoutComponentBase

<div>
    <FluentLayout>
        <FluentHeader>
            <SectionOutlet SectionName="PageTitle" />
        </FluentHeader>
        <FluentStack Orientation="Orientation.Vertical">
            <main>
                @Body
            </main>
        </FluentStack>
    </FluentLayout>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
